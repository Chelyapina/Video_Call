<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembersActivity"
    android:padding="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Avatar1_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/avatar_1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UserName_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Username_1"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/Avatar1_1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Avatar2_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/avatar_2"
        android:layout_marginTop="30dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toBottomOf="@id/Avatar1_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UserName_2_1"
        android:layout_width="270dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/Username_2"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/Avatar2_1"
        app:layout_constraintTop_toBottomOf="@id/Avatar1_1"/>


</androidx.constraintlayout.widget.ConstraintLayout>